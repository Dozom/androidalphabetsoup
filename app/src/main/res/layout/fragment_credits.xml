<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1B1B"
    android:layout_gravity="center"
    tools:context=".MenuActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="30dp">
        <!-- Text La meva puntuació -->
        <TextView
            android:id="@+id/miPuntuaciotxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Credits"
            android:textColor="#FF5252"
            android:textSize="30sp" />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/alienimagen"
            android:src="@drawable/fondo" />
        <Button
            android:id="@+id/pol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pol Renalies"
            android:layout_marginTop="10dp"
            android:background="@drawable/botopropi"
            android:textColor="@color/black"
            />
        <!-- BOTO DE puntuacions -->
        <Button
            android:id="@+id/dani"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daniel Nager"
            android:layout_marginTop="10dp"
            android:background="@drawable/botopropi"
            android:textColor="@color/black"
            />
        <!-- BOTO DE Tancar sessió -->
        <Button
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/backtomenu"
            android:layout_marginTop="10dp"
            android:background="@drawable/botopropi"
            android:textColor="@color/black"
            />
    </LinearLayout>
</ScrollView>